<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" stylesheets="@../../../styles/estilo.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.peliculas.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="welcomeText" text="Consulta la informacion de tu base datos:" />
    <Button fx:id="btnID" onAction="#onID" prefHeight="26.0" prefWidth="120.0" text="ID Peliculas" />
   <Button fx:id="btnName" mnemonicParsing="false" onAction="#onName" prefWidth="120.0" text="Nombre Peliculas" />
   <Button fx:id="btnGenere" mnemonicParsing="false" onAction="#onGenere" prefWidth="120.0" text="Genero Peliculas" />
   <Button fx:id="btnYear" mnemonicParsing="false" onAction="#onYear" prefWidth="120.0" text="Anio Peliculas" />
</VBox>
